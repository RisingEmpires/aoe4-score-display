{
  "name": "aoe4-score-display",
  "version": "0.0.0",
  "description": "",
  "homepage": "",
  "author": {
    "name": "Coow",
    "email": "eirik_skarding@hotmail.no"
  },
  "keywords": [
    "",
    "nodecg-bundle"
  ],
  "files": [
    "dashboard",
    "graphics",
    "extension.js",
    "extension"
  ],
  "nodecg": {
    "compatibleRange": "^2.0.0",
    "graphics": [
      {
        "file": "index.html",
        "title": "Ingame Score Display",
        "width": 1920,
        "height": 1080,
        "singleInstance": false
      },
      {
        "file": "TeamGameIOU.html",
        "width": 1920,
        "height": 1080,
        "singleInstance": false
      },
      {
        "file": "TeamGameNoUI.html",
        "width": 1920,
        "height": 1080,
        "singleInstance": false
      },
      {
        "file": "LobbyScore.html",
        "width": 1920,
        "height": 1080,
        "singleInstance": false
      }
    ],
    "dashboardPanels": [
      {
        "name": "panel",
        "title": "Score Display",
        "width": 3,
        "file": "panel.html",
        "headerColor": "#525F78"
      }
    ],
    "assetCategories": [
      {
        "name": "streamAssets",
        "title": "Stream Assets",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png"
        ]
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "build": "node --trace-warnings scripts/build.mjs --all",
    "build:extension": "node scripts/build.mjs --skipBrowser --extension",
    "watch": "node scripts/build.mjs --all --watch",
    "watch:browser": "node scripts/build.mjs --dashboard --graphics --skipExtension --watch",
    "watch:schemas": "node scripts/build.mjs --schemas --watch",
    "dev": "concurrently --kill-others \"npm run watch:browser\" \"nodemon\"",
    "generate-schema-types": "trash src/types/schemas && nodecg schema-types"
  },
  "dependencies": {
    "@types/react": "*",
    "@types/react-dom": "*",
    "klona": "^2.0.6",
    "nodecg-cli": "^8.6.8",
    "react": "*",
    "react-dom": "*",
    "react-select": "^5.7.3",
    "react-tooltip": "^5.21.5",
    "ts-node": "*",
    "tw-elements-react": "^1.0.0-alpha1",
    "use-nodecg": "^0.4.1-2"
  },
  "devDependencies": {
    "@nodecg/types": "^2.0.0",
    "@parcel/config-default": "*",
    "@parcel/core": "*",
    "@parcel/reporter-cli": "*",
    "@parcel/validator-typescript": "*",
    "@types/node": "*",
    "concurrently": "*",
    "glob": "10.3.0",
    "nodecg-cli": "^8.6.8",
    "nodemon": "*",
    "trash-cli": "*",
    "typescript": "*",
    "use-nodecg": "^0.4.1-2"
  },
  "repository": "https://github.com/RisingEmpires/aoe4-stream-manager.git",
  "license": "MIT"
}
